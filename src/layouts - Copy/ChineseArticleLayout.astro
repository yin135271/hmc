---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <p><em>{frontmatter.description}</em></p>

  <p>Written by: {frontmatter.author}</p>

  <div class="tags">
    {
      frontmatter.tags.map((tag: string) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>

  <slot />
</BaseLayout>

<style is:global>
    div.container {
      padding: 32px;
    }


body {
  font-family: 'Noto Sans CJK TC', -apple-system, BlinkMacSystemFont, "PingFang TC", "Hiragino Sans CNS", "Microsoft JhengHei UI", "Microsoft JhengHei", system-ui, sans-serif;
  font-size: 20px; /* Slightly larger base size */
  font-weight: 300;
  line-height: 1.7; /* Generous line height */
  color: #333; /* Standard text color */
  background-color: #fff; /* Standard background */
  letter-spacing: normal; /* Ensure no unwanted letter-spacing */
  word-spacing: normal;
  /* Add lang="zh-Hant" to your HTML tag! */
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 700; /* Or adjust as needed, e.g., 500 */
  margin-bottom: 0.8em;
  line-height: 1.4; /* Slightly tighter line-height for headings */
}

h1 { font-size: 2.2rem; }
h2 { font-size: 1.8rem; }

p {
  margin-bottom: 1.2em; /* Good spacing between paragraphs */
  text-align: left;
}

a {
  color: #007bff; /* Example link color */
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

/* Ensure lists also have good spacing */
ul, ol {
  padding-left: 2em;
  margin-bottom: 1.2em;
}

li {
  margin-bottom: 0.5em;
}
</style>
